{
  "manifest_version": 3,
  "name": "YouTube Comment Exporter",
  "version": "1.1",
  "description": "Extracts comments from a YouTube video page and exports them to a CSV file.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
  "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
